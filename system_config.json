{
  "monitoring": {
    "enabled": true,
    "interval_hours": 6,
    "max_domains_per_scan": 1000,
    "save_results": true
  },
  "detection": {
    "similarity_threshold": 0.7,
    "confidence_threshold": 0.5,
    "check_content": true,
    "check_ssl": true
  },
  "reporting": {
    "auto_generate": true,
    "report_interval_hours": 24,
    "include_screenshots": false,
    "export_formats": [
      "json",
      "csv"
    ]
  },
  "data_sources": {
    "certificate_transparency": true,
    "dns_monitoring": true,
    "typosquatting": true,
    "subdomain_enumeration": true
  }
}